{
  "name": "pos-system",
  "version": "1.0.0",
  "description": "Point of Sale System",
  "main": "index.js",
  "scripts": {
    "start": "npm start --prefix server",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
